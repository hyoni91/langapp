generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  locale    String   @default("ja")
  createdAt DateTime @default(now())
}

model Word {
  id        String   @id @default(cuid())
  lang      String // 'ja' | 'ko'
  surface   String // 단어 표기
  meaning   String
  tags      String[] @default([])
  createdAt DateTime @default(now())

  @@index([lang, surface])
}
